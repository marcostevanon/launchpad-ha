# Example environment variables for ha-launchpad
# Copy to .env and fill the values (do NOT commit real tokens)

LOG_LEVEL=DEBUG
LOG_FILE=/var/log/ha-launchpad.out.log

HA_URL=http://your-home-assistant:8123
HA_TOKEN=long_lived_home_assistant_token_here
POLL_INTERVAL=2.0

LAUNCHPAD_VENDOR=0x1235
LAUNCHPAD_PRODUCT=0x0113
LAUNCHPAD_IDENT=LPMiniMK3 MIDI
LAUNCHPAD_INACTIVITY_TIMEOUT=15.0

HA_CONNECT_RETRY_DELAY=3.0
HA_CONNECT_MAX_DELAY=30.0
HA_REQUEST_RETRY_DELAY=2.0
HA_REQUEST_MAX_DELAY=5.0

LAUNCHPAD_ALIVE_DELAY=3.0
LAUNCHPAD_RETRY_DELAY=1.0
LAUNCHPAD_MAX_RETRY_DELAY=10.0

LAUNCHPAD_ROTATION=180